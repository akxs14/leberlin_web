<?xml version="1.0" encoding="utf-8"?>
<modification>
    <name>Nico - Resize images keeping fixed width</name>
    <version>1.0</version>
    <author>nicole_89</author>
    <link>http://www.nicolette.ro</link>
    <code>nico_resizewidth</code>

	<file path="catalog/controller/*/*.php">
		<operation>
			<search><![CDATA[model_tool_image->resize(]]></search>
			<add position="replace" trim="true"><![CDATA[model_tool_image->resizewidth(]]></add>
		</operation>
	</file>
</modification>
